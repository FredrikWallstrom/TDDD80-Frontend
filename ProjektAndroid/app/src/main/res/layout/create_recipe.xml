<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:fillViewport="true"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".Chat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back_from_create_recipe"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_backbutton" />

        <EditText
            android:id="@+id/recipe_name_field_create_recipe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/back_from_create_recipe"
            android:layout_marginTop="10dp"
            android:hint="Recipe name"
            android:textSize="20sp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/recipe_information_field_create_recipe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Recipe information"
            android:textSize="20sp"
            android:layout_below="@+id/recipe_name_field_create_recipe"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/confirm_recipe_button"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/add_recipe_button"
            android:text="Add"
            android:textColor="#545454"
            android:layout_below="@+id/recipe_information_field_create_recipe"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>
